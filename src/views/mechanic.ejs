<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mechanics Page</title>

    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="/vendor/quill/quill.snow.css" rel="stylesheet" />
    <link href="/vendor/quill/quill.bubble.css" rel="stylesheet" />
    <link href="/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="/vendor/simple-datatables/style.css" rel="stylesheet" />
    <link href="/css/style1.css" rel="stylesheet" />
  </head>

  <body class="order">
    <video
      class="bg-vid"
      src="/images/mechanic.mp4"
      autoplay
      loop
      muted
      plays-inline
    ></video>
    <div class="container">
      <div class="row bar">
        <div class="col-lg-4">
          <div
            id="glass"
            class="side d-flex flex-column flex-shrink-0 p-3"
            style="width: 280px"
          >
            <a
              href="/"
              class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none"
            >
              <span class="fs-4 link-light">ADMIN</span>
            </a>
            <hr />
            <ul class="nav nav-pills flex-column mb-auto">
              <li class="nav-item">
                <a href="/admin" class="nav-link link-light" aria-current="page"
                  >Home</a
                >
              </li>
              <li>
                <a href="/orders" class="nav-link link-light">Appointments</a>
              </li>
              <li>
                <a href="/Service" class="nav-link link-light">Services</a>
              </li>
              <li>
                <a href="/mechanic" class="nav-link link-light active"
                  >Mechanics</a
                >
              </li>
              <li>
                <a href="/customers" class="nav-link link-light">Customers</a>
              </li>
            </ul>
            <hr />
          </div>
        </div>
        <div class="col-lg-8">
          <section class="section dashboard">
            <div id="glass1" class="mt-4">
              <h1 class="text-white">MECHANICS</h1>
              <div class="container mt-3 text-white">
                <h2 class="text-white">Add New Mechanic</h2>
                <form action="/add-mechanic" method="post">
                  <div class="mb-3">
                    <label for="name" class="form-label text-white"
                      >Mechanic Name:</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="name"
                      name="name"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label text-white"
                      >Email:</label
                    >
                    <input
                      type="email"
                      class="form-control"
                      id="email"
                      name="email"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="phone_number" class="form-label text-white"
                      >Phone Number:</label
                    >
                    <input
                      type="tel"
                      class="form-control"
                      id="phone_number"
                      name="phone_number"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="location" class="form-label text-white"
                      >Location:</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="location"
                      name="location"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="experience_years" class="form-label text-white"
                      >Years of Experience:</label
                    >
                    <input
                      type="number"
                      class="form-control"
                      id="experience_years"
                      name="experience_years"
                      min="0"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label text-white"
                      >Password:</label
                    >
                    <input
                      type="password"
                      class="form-control"
                      id="password"
                      name="password"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="service_id" class="form-label text-white"
                      >Service:</label
                    >
                    <select
                      class="form-control bg-light px-4 py-2 border-0"
                      name="service_id"
                    >
                      <option value="">Select a service...</option>
                      <% if (services && Array.isArray(services) &&
                      services.length > 0) { %> <% services.forEach(service => {
                      %>
                      <option value="<%= service.service_id %>">
                        <%= service.service_name %> - <%= service.service_type
                        %> ($<%= service.estimated_cost %>)
                      </option>
                      <% }) %> <% } else { %>
                      <option value="">No services available</option>
                      <% } %>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label class="form-label text-white">Availability:</label>
                    <div>
                      <input
                        type="radio"
                        id="available"
                        name="availability"
                        value="true"
                        checked
                      />
                      <label for="available">Available</label><br />
                      <input
                        type="radio"
                        id="notAvailable"
                        name="availability"
                        value="false"
                      />
                      <label for="notAvailable">Not Available</label>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-secondary">
                    Add Mechanic
                  </button>
                </form>
              </div>
            </div>

            <table class="mechanic-table">
              <thead>
                <tr>
                  <th>Mechanic ID</th>
                  <th>Mechanic Name</th>
                  <th>Email</th>
                  <th>Phone Number</th>
                  <th>Location</th>
                  <th>Experience (Years)</th>
                  <th>Availability</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% if (mechanic && Array.isArray(mechanic) && mechanic.length >
                0) { %> <% mechanic.forEach((mechanic) => { %>
                <tr>
                  <td><%= mechanic.mechanic_id %></td>
                  <td><%= mechanic.name %></td>
                  <td><%= mechanic.email %></td>
                  <td><%= mechanic.phone_number %></td>
                  <td><%= mechanic.location %></td>
                  <td><%= mechanic.experience_years %></td>
                  <td><%= mechanic.availability ? 'Yes' : 'No' %></td>
                  <td>
                    <form
                      action="/mechanics/drop/<%= mechanic.mechanic_id %>"
                      method="post"
                    >
                      <button type="submit" class="btn btn-danger">Drop</button>
                    </form>
                  </td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td colspan="8">No mechanics available</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </section>
        </div>
      </div>
    </div>
  </body>
</html>
