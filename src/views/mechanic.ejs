<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Mechanics Page</title>

  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/css/style1.css" rel="stylesheet" />
</head>

<body class="order">
  <video class="bg-vid" src="/images/mechanic.mp4" autoplay loop muted plays-inline></video>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-lg-3 col-md-4">
        <div id="glass" class="side d-flex flex-column flex-shrink-0 p-3" style="min-height: 100vh; width: 280px">
          <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
            <span class="fs-4 link-light">ADMIN</span>
          </a>
          <hr class="text-white" />
          <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
              <a href="/admin" class="nav-link link-light">
                <i class="bi bi-house-door me-2"></i>Home
              </a>
            </li>
            <li>
              <a href="/orders" class="nav-link link-light">
                <i class="bi bi-calendar-check me-2"></i>Appointments
              </a>
            </li>
            <li>
              <a href="/Service" class="nav-link link-light">
                <i class="bi bi-tools me-2"></i>Services
              </a>
            </li>
            <li>
              <a href="/add-mechanic" class="nav-link link-light" aria-current="page">
                <i class="bi bi-person-gear me-2"></i>Add Mechanics
              </a>
            </li>
            <li>
              <a href="/mechanic" class="nav-link link-light active">
                <i class="bi bi-people me-2"></i>View Mechanics
              </a>
            </li>
            <li>
              <a href="/customers" class="nav-link link-light">
                <i class="bi bi-people me-2"></i>Customers
              </a>
            </li>
          </ul>
          <hr class="text-white" />
          <div class="dropdown">
            <a href="#" class="d-flex align-items-center link-light text-decoration-none dropdown-toggle"
              id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="ri-user-line me-2"></i>Admin
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
              <li><a class="dropdown-item" href="/logout">Sign out</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <section class="section dashboard">
          <% if (message) { %>
            <div class="alert alert-info">
              <%= message %>
            </div>
            <% } %>
              <table class="mechanic-table">
                <thead>
                  <tr>
                    <th>Mechanic ID</th>
                    <th>Mechanic Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Location</th>
                    <th>Experience (Years)</th>
                    <th>Availability</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (mechanic && Array.isArray(mechanic) && mechanic.length> 0) { %>
                    <% mechanic.forEach((mechanic)=> { %>
                      <tr>
                        <td>
                          <%= mechanic.mechanic_id %>
                        </td>
                        <td>
                          <%= mechanic.name %>
                        </td>
                        <td>
                          <%= mechanic.email %>
                        </td>
                        <td>
                          <%= mechanic.phone_number %>
                        </td>
                        <td>
                          <%= mechanic.location %>
                        </td>
                        <td>
                          <%= mechanic.experience_years %>
                        </td>
                        <td>
                          <%= mechanic.availability ? 'Yes' : 'No' %>
                        </td>
                        <td>
                          <form action="/mechanics/drop/<%= mechanic.mechanic_id %>" method="post">
                            <button type="submit" class="btn btn-danger">Drop</button>
                          </form>
                        </td>
                      </tr>
                      <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="8">No mechanics available</td>
                          </tr>
                          <% } %>
                </tbody>
              </table>
        </section>
      </div>
    </div>
  </div>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>